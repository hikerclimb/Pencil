@model Pencil.Models.Db.PencilTable

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>PencilTable</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PencilId" />
            <div class="form-group">
                <label asp-for="BuyerId1" class="control-label"></label>
                <select asp-for="BuyerId1" class="form-control" asp-items="ViewBag.BuyerId1">
                </select>
                <span asp-validation-for="BuyerId1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuyerId2" class="control-label"></label>
                <select asp-for="BuyerId2" class="form-control" asp-items="ViewBag.BuyerId2">
                </select>
                <span asp-validation-for="BuyerId2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuyerId3" class="control-label"></label>
                <select asp-for="BuyerId3" class="form-control" asp-items="ViewBag.BuyerId3">
                </select>
                <span asp-validation-for="BuyerId3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="file" name="file" id="file" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

